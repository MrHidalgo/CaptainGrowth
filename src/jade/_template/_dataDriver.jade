mixin imgData(imageSizeHeight)
    -
        var imageSize = (imageSizeHeight / 2);

    img(
        src="./image/img-data.png"
        class="data__img"
        title=""
        height!= imageSize
    )

//- ====================
//- MAIN
//- ====================
section.data#data

    .data_img
        i.data_img-left.resize_left
        i.data_img-right.resize_right
        i.data_img-smallS.resize_right-s
        i.data_img-bigS.resize_right-s

    .container-default

        +mainTitle(1, dataTitle, dataTitleGradient)

        p.data__subTitle!= dataSubTitle

        +imgData(1288)



